{
  "name": "8fold/commonmark-accessible-heading-permalinks",
  "description": "An extension of PHP League's CommonMark library to enable accessible Heading Permalinks usage.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^7.4||^8.0",
    "league/commonmark": "^2.0.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^0.12",
    "pestphp/pest": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "Eightfold\\CommonMarkHeadingPermalinks\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eightfold\\CommonMarkHeadingPermalinks\\Tests\\": "./tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "prefer-stable": true,
  "scripts": {
    "prod": "@production",
    "production": ["@style", "@stan", "@test"],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml -p ./src",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/pest"
  }
}
